body, html
  line-height: 1
  font-family: 'PingFang SC', 'STHeitiSC-Light', 'Helvetica-Light', arial, sans-serif, 'Droid Sans Fallback'
  user-select: none
  -webkit-tap-highlight-color: transparent
  background: $color-bg
  color: $color-text
  box-sizing: border-box

*, *:before, *:after {
  box-sizing: inherit
}

html
  font-size 10vw

  body
    font-size 14px
